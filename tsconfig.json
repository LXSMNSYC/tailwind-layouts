{
  "exclude": [
    "node_modules",
    "**/react.tsx",
    "**/vue.tsx",
    "**/preact.tsx",
    "**/lit-html.tsx",
    "**/uhtml.tsx",
  ],
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2017"
  }
}